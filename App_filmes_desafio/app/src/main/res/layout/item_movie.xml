<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    android:background="#091662"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="346dp"
            android:layout_height="166dp" />

        <TextView
            android:id="@+id/txt_viewTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_viewDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_viewNota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_favoritar"
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#091662"
            android:text="Favoritar" />

        <Button
            android:id="@+id/btn_apagar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#091662"
            android:text="Apagar" />

    </LinearLayout>

</androidx.cardview.widget.CardView>